%%=====================================================
%% Action: Login
%% Used to simulate a user logging into the system
%%=====================================================
{[
    {name, <<"login">>},
    {url, "http://127.0.0.1:1337/login"},
    {type, get},
    {args, [
        {"username", "foo"},
        {"password", "bar"}
    ]},
    {results,[ 
        {"session", "$SESSION"}
    ]},
    {args_type, http},
    {results_type, json}
]}.

